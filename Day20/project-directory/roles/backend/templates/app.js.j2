// app.js
const express = require('express');
const mysql = require('mysql');
const app = express();
const PORT = process.env.PORT || 3000;

// Create a MySQL connection
const db = mysql.createConnection({
  host: "{{ db_host }}", // Use the variable from the vars file
  user: "{{ db_user }}", // Use the variable from the vars file
  password: "{{ db_pass }}", // Use the variable from the vars file
  database: "{{ db_name }}" // Use the variable from the vars file
});

db.connect((err) => {
  if (err) {
    console.error('Error connecting to the database:', err);
    process.exit(1);
  }
  console.log('Connected to the database');
});

app.get('/', (req, res) => {
  res.send('Hello from Backend, Node Js Application.');
});

app.listen(PORT, '0.0.0.0', () => {
  console.log(`Server running on port ${PORT}`);
});

